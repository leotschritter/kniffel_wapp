# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /               controllers.KniffelController.index()

GET         /kniffel               controllers.KniffelController.kniffel()

GET         /about               controllers.KniffelController.about()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file   controllers.Assets.versioned(path="/public", file: Asset)

GET         /field          controllers.KniffelController.field

+nocsrf
PUT         /dice           controllers.KniffelController.dice

+nocsrf
PUT         /out            controllers.KniffelController.putOut(out: String)

+nocsrf
PUT         /in             controllers.KniffelController.putIn(in: String)

+nocsrf
PUT         /write          controllers.KniffelController.write(to: String)

+nocsrf
PUT         /undo           controllers.KniffelController.undo

+nocsrf
PUT         /redo           controllers.KniffelController.redo

+nocsrf
POST        /save           controllers.KniffelController.save

GET         /load           controllers.KniffelController.load

+nocsrf
POST        /new            controllers.KniffelController.newGame(players: Int)